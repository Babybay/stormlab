// Services.astro
---

<style>
  .services {
    min-height: 100vh;
    background: var(--primary-black);
    padding: var(--space-3xl) 0;
    position: relative;
    overflow: hidden;
  }

  .services::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: radial-gradient(circle at 20% 30%, rgba(255, 255, 255, 0.03) 0%, transparent 50%),
                radial-gradient(circle at 80% 70%, rgba(255, 255, 255, 0.03) 0%, transparent 50%);
    pointer-events: none;
  }

  .services-header {
    text-align: left;
    margin-bottom: var(--space-3xl);
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    gap: var(--space-2xl);
    position: relative;
    z-index: 1;
  }

  .services-title-wrapper {
    flex: 1;
    max-width: 600px;
  }

  .services-title {
    font-size: clamp(2.5rem, 5vw, 4rem);
    font-weight: 800;
    color: var(--pure-white);
    line-height: 1.2;
    margin-bottom: var(--space-xl);
    letter-spacing: -0.02em;
  }

  .services-intro {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: var(--space-2xl);
    margin-bottom: var(--space-3xl);
  }

  .intro-card {
    position: relative;
  }

  .intro-card h3 {
    font-size: var(--font-lg);
    font-weight: 600;
    color: var(--pure-white);
    margin-bottom: var(--space-md);
    line-height: 1.4;
  }

  .intro-card p {
    font-size: var(--font-sm);
    color: var(--medium-gray);
    line-height: 1.6;
    margin-bottom: var(--space-lg);
  }

  .intro-link {
    display: inline-flex;
    align-items: center;
    gap: var(--space-sm);
    color: var(--pure-white);
    font-size: var(--font-sm);
    font-weight: 600;
    transition: var(--transition);
    border-bottom: 1px solid transparent;
    padding-bottom: 2px;
  }

  .intro-link:hover {
    gap: var(--space-md);
    border-bottom-color: var(--pure-white);
  }

  .intro-link svg {
    transition: var(--transition);
  }

  .services-contact {
    display: flex;
    flex-direction: column;
    gap: var(--space-md);
    align-items: flex-end;
  }

  .contact-info {
    display: flex;
    flex-direction: column;
    align-items: flex-end;
    gap: var(--space-sm);
  }

  .contact-info a {
    color: var(--pure-white);
    font-size: var(--font-sm);
    font-weight: 500;
    transition: var(--transition);
  }

  .contact-info a:hover {
    color: var(--medium-gray);
  }

  .menu-btn {
    width: 48px;
    height: 48px;
    background: transparent;
    border: 1px solid rgba(255, 255, 255, 0.2);
    border-radius: var(--radius-md);
    cursor: pointer;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    gap: 4px;
    transition: var(--transition);
  }

  .menu-btn:hover {
    background: rgba(255, 255, 255, 0.05);
    border-color: rgba(255, 255, 255, 0.4);
  }

  .menu-btn span {
    width: 20px;
    height: 2px;
    background: var(--pure-white);
    transition: var(--transition);
  }

  .services-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: var(--space-lg);
    position: relative;
    z-index: 1;
  }

  .service-card {
    background: var(--pure-white);
    border-radius: var(--radius-xl);
    padding: var(--space-2xl);
    position: relative;
    overflow: hidden;
    transition: var(--transition);
    cursor: pointer;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    min-height: 320px;
  }

  .service-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(135deg, transparent 0%, rgba(0, 0, 0, 0.05) 100%);
    opacity: 0;
    transition: var(--transition);
  }

  .service-card::after {
    content: '';
    position: absolute;
    top: 50%;
    left: 50%;
    width: 0;
    height: 0;
    border-radius: 50%;
    background: rgba(255, 255, 255, 0.3);
    transform: translate(-50%, -50%);
    transition: width 0.6s ease, height 0.6s ease;
  }

  .service-card:hover::before {
    opacity: 1;
  }

  .service-card:hover::after {
    width: 500px;
    height: 500px;
  }

  .service-card:hover {
    transform: translateY(-8px) scale(1.02);
    box-shadow: var(--shadow-hover);
  }

  /* Unique background colors for each card */
  .service-card:nth-child(1) {
    background: linear-gradient(135deg, #ffc2e2 0%, #ffb3d9 100%);
  }

  .service-card:nth-child(2) {
    background: linear-gradient(135deg, #d4fc79 0%, #c3f76e 100%);
  }

  .service-card:nth-child(3) {
    background: linear-gradient(135deg, #ffd93d 0%, #ffc933 100%);
  }

  .service-card:nth-child(4) {
    background: linear-gradient(135deg, #a8edea 0%, #95e3df 100%);
  }

  .service-card:nth-child(5) {
    background: linear-gradient(135deg, #ffeaa7 0%, #ffd97d 100%);
  }

  .service-icon {
    width: 48px;
    height: 48px;
    background: var(--primary-black);
    border-radius: var(--radius-md);
    display: flex;
    align-items: center;
    justify-content: center;
    margin-bottom: var(--space-xl);
    transition: var(--transition);
    position: relative;
    z-index: 2;
  }

  .service-card:hover .service-icon {
    transform: rotate(360deg) scale(1.1);
    transition-duration: 1.5s;
    box-shadow: 0 8px 24px rgba(0, 0, 0, 0.2);
  }

  .service-icon svg {
    width: 24px;
    height: 24px;
    fill: var(--pure-white);
  }

  .service-content {
    flex: 1;
    position: relative;
    z-index: 2;
  }

  .service-number {
    font-size: var(--font-sm);
    font-weight: 700;
    color: var(--primary-black);
    opacity: 0.3;
    margin-bottom: var(--space-sm);
    transform: translateY(0);
    transition: all 0.4s cubic-bezier(0.68, -0.55, 0.265, 1.55);
  }

  .service-card:hover .service-number {
    opacity: 0.6;
    transform: translateY(-5px);
  }

  .service-title {
    font-size: var(--font-2xl);
    font-weight: 800;
    color: var(--primary-black);
    line-height: 1.3;
    margin-bottom: var(--space-md);
    letter-spacing: -0.01em;
    transform: translateX(0);
    transition: all 0.5s cubic-bezier(0.68, -0.55, 0.265, 1.55);
  }

  .service-card:hover .service-title {
    transform: translateX(8px);
    letter-spacing: 0.02em;
  }

  .service-description {
    font-size: var(--font-sm);
    color: var(--primary-black);
    opacity: 0;
    max-height: 0;
    line-height: 1.6;
    transform: translateY(20px);
    transition: all 0.6s cubic-bezier(0.68, -0.55, 0.265, 1.55);
    overflow: hidden;
  }

  .service-card:hover .service-description {
    opacity: 0.8;
    max-height: 200px;
    transform: translateY(0);
  }

  .service-arrow {
    width: 40px;
    height: 40px;
    background: var(--primary-black);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    margin-top: var(--space-lg);
    transition: all 0.5s cubic-bezier(0.68, -0.55, 0.265, 1.55);
    align-self: flex-start;
    position: relative;
    z-index: 2;
    opacity: 0.6;
    transform: scale(0.8);
  }

  .service-card:hover .service-arrow {
    transform: rotate(45deg) scale(1);
    opacity: 1;
    box-shadow: 0 4px 16px rgba(0, 0, 0, 0.3);
  }

  .service-arrow svg {
    width: 20px;
    height: 20px;
    stroke: var(--pure-white);
    transition: var(--transition);
  }

  .service-card:hover .service-arrow svg {
    stroke-width: 2.5;
  }

  @media (max-width: 1024px) {
    .services-header {
      flex-direction: column;
    }

    .services-contact {
      align-items: flex-start;
    }

    .contact-info {
      align-items: flex-start;
    }

    .services-grid {
      grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    }
  }

  @media (max-width: 768px) {
    .services-intro {
      grid-template-columns: 1fr;
    }

    .services-grid {
      grid-template-columns: 1fr;
    }

    .service-card {
      min-height: 280px;
    }
  }

  @media (max-width: 480px) {
    .services {
      padding: var(--space-2xl) 0;
    }

    .services-title {
      font-size: var(--font-3xl);
    }
  }
</style>

