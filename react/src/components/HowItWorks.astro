<script>
// Enhanced Intersection Observer with stagger animations
const observerOptions = {
  threshold: 0.2,
  rootMargin: '0px 0px -100px 0px'
};

const observer = new IntersectionObserver((entries) => {
  entries.forEach(entry => {
    if (entry.isIntersecting) {
      entry.target.classList.add('animate');
      
      // Add stagger delay for multiple cards
      const cards = document.querySelectorAll('.process-card');
      cards.forEach((card, index) => {
        if (card === entry.target) {
          card.style.animationDelay = `${index * 0.2}s`;
        }
      });
    }
  });
}, observerOptions);

// Enhanced hover interactions
document.addEventListener('DOMContentLoaded', () => {
  const cards = document.querySelectorAll('.process-card');
  
  // Observe cards for scroll animations
  cards.forEach(card => {
    observer.observe(card);
  });
  
  // Enhanced hover effects
  cards.forEach((card, index) => {
    card.addEventListener('mouseenter', () => {
      // Scale down other cards
      cards.forEach((otherCard, otherIndex) => {
        if (otherCard !== card) {
          otherCard.style.transform = `translateY(10px) scale(0.95)`;
          otherCard.style.opacity = '0.7';
          otherCard.style.filter = 'blur(2px)';
        }
      });
      
      // Add enhanced glow to current card
      card.style.boxShadow = `
        0 60px 120px rgba(0, 0, 0, 0.2),
        0 0 0 1px rgba(255, 255, 255, 0.9),
        0 0 60px rgba(59, 130, 246, 0.3)
      `;
    });
    
    card.addEventListener('mouseleave', () => {
      // Reset all cards
      cards.forEach(otherCard => {
        otherCard.style.transform = '';
        otherCard.style.opacity = '';
        otherCard.style.filter = '';
        otherCard.style.boxShadow = '';
      });
    });
    
    // Click interaction for mobile
    card.addEventListener('click', () => {
      card.style.transform = 'translateY(-25px) scale(1.05)';
      setTimeout(() => {
        card.style.transform = '';
      }, 200);
    });
  });
  
  // Interactive category tiles
  const categoryTiles = document.querySelectorAll('.category-tile');
  categoryTiles.forEach(tile => {
    tile.addEventListener('click', () => {
      // Add click animation
      tile.style.transform = 'scale(0.95)';
      setTimeout(() => {
        tile.style.transform = '';
      }, 150);
      
      // Add temporary selected state
      tile.style.background = 'rgba(59, 130, 246, 0.2)';
      setTimeout(() => {
        tile.style.background = '';
      }, 1000);
    });
  });
  
  // Interactive call buttons
  const callButtons = document.querySelectorAll('.action-btn');
  callButtons.forEach(btn => {
    btn.addEventListener('click', () => {
      btn.style.transform = 'scale(1.2) rotate(10deg)';
      setTimeout(() => {
        btn.style.transform = '';
      }, 200);
    });
  });
  
  // Logo hover effects
  const logoItems = document.querySelectorAll('.logo-item');
  logoItems.forEach(logo => {
    logo.addEventListener('mouseenter', () => {
      const icon = logo.querySelector('.logo-icon');
      icon.style.animationDuration = '0.5s';
    });
    
    logo.addEventListener('mouseleave', () => {
      const icon = logo.querySelector('.logo-icon');
      icon.style.animationDuration = '8s';
    });
  });
  
  // Parallax effect for floating elements
  if (!window.matchMedia('(prefers-reduced-motion: reduce)').matches) {
    window.addEventListener('scroll', () => {
      const scrolled = window.pageYOffset;
      const rate = scrolled * -0.5;
      
      const floatingElements = document.querySelectorAll('.float-element');
      floatingElements.forEach(element => {
        element.style.transform = `translateY(${rate}px)`;
      });
    });
  }
});

// Performance optimization: Pause animations when not visible
const pauseAnimationsObserver = new IntersectionObserver((entries) => {
  entries.forEach(entry => {
    const animatedElements = entry.target.querySelectorAll('[class*="animation"], [class*="animate"]');
    if (entry.isIntersecting) {
      animatedElements.forEach(el => {
        el.style.animationPlayState = 'running';
      });
    } else {
      animatedElements.forEach(el => {
        el.style.animationPlayState = 'paused';
      });
    }
  });
});

document.addEventListener('DOMContentLoaded', () => {
  const section = document.querySelector('.process-section');
  if (section) {
    pauseAnimationsObserver.observe(section);
  }
});
</script>